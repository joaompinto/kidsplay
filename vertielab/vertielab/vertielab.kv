<SimulatorCanvas>:
	size: self.size
	pos: self.pos
	canvas.after:
		Line:
            points: [self.x, self.top, self.right, self.top]
        Line:
            points: [self.right, self.top, self.right, self.y]
        Line:
            points: [self.x, self.y, self.right, self.y]
        Line:
            points: [self.x, self.y, self.x, self.top]
	padding: 0
	size_hint: 1, 1
	on_touch_down: self.on_touch_down 

