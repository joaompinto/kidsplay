#:kivy 1.0
<ToolBox>:
	size_hint: None, 1
	width: 60
	height: root.height
	BoxLayout:
		size_hint: None, 1
		size: root.size
		#width: root.width-10
		orientation: 'vertical'
		spacing: 10
		Widget:
			color: 0, 0 ,0
			height: 10
			size_hint: 1, None
        Button:
			name: 'circle'
			on_press: root.on_press_tool(self)
			size_hint: 1, None
			height: 50
			Image:
				source: 'data/circle.png'
				pos: self.parent.center_x-20, self.parent.center_y-20
				size: 40, 40
		Button:
			name: 'polygon'
			on_press: root.on_press_tool(self)
			size_hint: 1, None
			height: 50
			Image:
				source: 'data/polygon.png'
				pos: self.parent.center_x-20, self.parent.center_y-20
				size: 40, 40
		Button:
			name: 'remove'
			on_press: root.on_press_tool(self)
			size_hint: 1, None
			height: 50
			Image:
				source: 'data/remove.png'
				pos: self.parent.center_x-20, self.parent.center_y-20
				size: 40, 40

		Button:
			name: 'clear_all'
			text: "Clear"
			on_press: root.do_action(self.name)
			size_hint: 1, None
			height: 50

